---
import faccia from "../assets/faccia.webp";

const navItems = [
  {
    title: "Proyectos",
    label: "proyectos",
    url: "/#proyectos",
  },
  {
    title: "Sobre mí",
    label: "sobre-mi",
    url: "/#sobre-mi",
  },
  {
    title: "Contacto",
    label: "contacto",
    url: "mailto:giovarafi@gmail.com",
  },
];
---

<header
  class="relative flex justify-between items-center py-5 w-full max-w-6xl mx-auto px-4 bg-[#050505] z-20"
>
  <!-- Logo o Imagen -->
  <img class="rounded-full w-12 h-12" src={faccia.src} alt="Gianni" />

  <!-- Botón Hamburguesa -->
  <button
    id="menu-toggle"
    class="lg:hidden flex items-center px-3 py-2 border rounded text-white border-white"
    aria-label="Toggle navigation"
  >
    <svg
      class="fill-current h-5 w-5"
      viewBox="0 0 20 20"
      xmlns="http://www.w3.org/2000/svg"
    >
      <title>Menu</title>
      <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
    </svg>
  </button>

  <!-- Navegación -->
  <nav
    id="menu"
    class="absolute left-0 right-0 top-full z-10 bg-[#050505] lg:relative lg:top-auto lg:left-auto lg:right-auto lg:z-auto transition-transform transform -translate-y-full scale-y-0 origin-top lg:transform-none lg:scale-y-100 duration-300 ease-in-out max-h-0 overflow-hidden lg:max-h-none lg:overflow-visible lg:flex flex-col lg:flex-row gap-6 opacity-80 items-center"
  >
    {
      navItems.map((link) => (
        <a
          class="block px-4 py-2 transition text-white hover:text-blue-500"
          aria-label={link.label}
          href={link.url}
        >
          {link.title}
        </a>
      ))
    }
  </nav>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menu-toggle");
    const menu = document.getElementById("menu");

    // Verificar que los elementos existen
    if (menuToggle && menu) {
      menuToggle.addEventListener("click", () => {
        if (
          menu.classList.contains("-translate-y-full") ||
          menu.classList.contains("scale-y-0")
        ) {
          menu.classList.remove(
            "-translate-y-full",
            "scale-y-0",
            "opacity-0",
            "max-h-0"
          );
          menu.classList.add(
            "translate-y-0",
            "scale-y-100",
            "opacity-100",
            "max-h-screen"
          );
        } else {
          menu.classList.add(
            "-translate-y-full",
            "scale-y-0",
            "opacity-0",
            "max-h-0"
          );
          menu.classList.remove(
            "translate-y-0",
            "scale-y-100",
            "opacity-100",
            "max-h-screen"
          );
        }
      });
    }
  });
</script>

<style is:global>
  nav {
    transition:
      max-height 0.3s ease-in-out,
      opacity 0.3s ease-in-out,
      transform 0.3s ease-in-out;
  }

  /* Estilo adicional para pantallas pequeñas */
  @media (max-width: 1024px) {
    #menu {
      position: absolute;
      top: 100%; /* Justo debajo del header */
      left: 0;
      right: 0;
      background: #050505; /* Fondo oscuro */
      padding: 1rem 0;
      border-top: 1px solid #333; /* Línea para separar */
      max-height: 0; /* Ocultar completamente */
      overflow: hidden;
    }

    #menu.translate-y-0 {
      max-height: 300px; /* Asegura espacio suficiente para todas las opciones */
      overflow: visible; /* Permite que se muestren todos los elementos */
      opacity: 1;
      pointer-events: auto;
    }
  }

  /* Asegurar que el texto sea visible */
  a {
    color: white; /* Texto blanco por defecto */
  }

  a:hover {
    color: #3b82f6; /* Azul para hover */
  }
</style>
